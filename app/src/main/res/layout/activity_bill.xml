<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#F9F9F9"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"

                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"


                app:layout_scrollFlags="scroll|enterAlways"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#F9F9F9"
                    android:layout_height="match_parent">
                    <co.jlabs.ordering.photoview.MyIconFonts
                        android:layout_width="wrap_content"
                        android:textColor="#000"
                        android:gravity="center"
                        android:padding="10dp"
                        android:id="@+id/back"
                        android:textSize="25sp"
                        android:layout_height="match_parent"
                        android:text="@string/back"/>
                    <co.jlabs.ordering.photoview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Summery"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:paddingLeft="15dp"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/back"/>

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>







        </android.support.design.widget.AppBarLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_below="@+id/appbar"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bill_back"
            android:layout_marginRight="10dp"
            android:layout_height="15dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_below="@+id/appbar"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <co.jlabs.ordering.photoview.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#454545"
                    android:textSize="17sp"
                    android:id="@+id/sum"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:text="BILL SUMMERY"/>
                <co.jlabs.ordering.photoview.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#454545"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:id="@+id/pay_mode"
                    android:background="#FFF000"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="COD"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/dashed"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/sum"
                    android:background="@drawable/bill_dhased"/>

                <co.jlabs.ordering.photoview.MyIconFonts
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/dashed"
                    android:text="total"
                    android:id="@+id/total"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp"
                    android:layout_height="wrap_content" />
                <co.jlabs.ordering.photoview.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/dashed"
                    android:paddingTop="3dp"
                    android:textSize="12sp"
                    android:text="ORDER ID"
                    android:id="@+id/order"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content" />
                <co.jlabs.ordering.photoview.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/order"
                    android:text="BAK_Night"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:id="@+id/order_id"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content" />
                <co.jlabs.ordering.photoview.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/order_id"
                    android:textSize="12sp"
                    android:text="Customer's Name"
                    android:id="@+id/cus_name"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content" />
                <co.jlabs.ordering.photoview.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/cus_name"
                    android:text="Kashyap Sharma"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:id="@+id/name"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content" />
                <co.jlabs.ordering.photoview.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/name"
                    android:text="Address"
                    android:textSize="12sp"
                    android:id="@+id/add_name"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content" />
                <co.jlabs.ordering.photoview.MyTextView
                    android:layout_width="wrap_content"
                    android:paddingRight="20dp"
                    android:layout_below="@+id/add_name"
                    android:text="D71, GF, Nebsarai, New Delhfdfsfsdfdsfdsfdsfdsfdsfdsfdsfdsfdsfdsfi\n110066"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:id="@+id/address"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content" />
                <co.jlabs.ordering.photoview.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/address"
                    android:text="Contact Number"
                    android:id="@+id/con_name"
                    android:textSize="12sp"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content" />
                <co.jlabs.ordering.photoview.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/con_name"
                    android:text="9711940752"
                    android:textStyle="bold"
                    android:id="@+id/contact"
                    android:paddingTop="5dp"
                    android:textSize="15sp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:text="Track Order"
                    android:id="@+id/track"
                    android:textColor="#fff"
                    android:background="#f26522"
                    android:layout_below="@+id/contact"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                   />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>