<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fefefe"
    android:id="@+id/lyt_card"
    android:padding="@dimen/padding_normal">

    <EditText
        android:id="@+id/email_to_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email to:"
        android:text="@string/support_email"
        android:inputType="textEmailAddress"
        android:enabled="false"
        android:padding="@dimen/padding_normal" />

    <EditText
        android:id="@+id/email_subject_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:hint="Subject"
        android:singleLine="true"
        android:padding="@dimen/padding_normal"
        android:textColor="@android:color/black"
        android:inputType="textEmailSubject"

        />


    <EditText
        android:id="@+id/email_msg_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:hint="Message"
        android:inputType="textMultiLine"
        android:minLines="6"
        android:padding="@dimen/padding_normal"
        android:textColor="@android:color/black"

        />
    <co.jlabs.ordering.Ripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        app:mrl_rippleOverlay="true">
    <Button
        android:id="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Send" />
</co.jlabs.ordering.Ripple.MaterialRippleLayout>
</LinearLayout>