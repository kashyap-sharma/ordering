<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">



<LinearLayout
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#FFFFFF">


	<android.support.v4.view.ViewPager
		android:id="@+id/pager"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" />

	<FrameLayout
		android:id="@+id/header"
		android:layout_width="match_parent"
		android:layout_height="@dimen/header_height"
		 >

		<com.flaviofaria.kenburnsview.KenBurnsView
			android:id="@+id/header_picture"
			android:layout_width="match_parent"
			android:layout_height="298dp"
			android:src="@drawable/photo1"
			/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="for making black film on top of KenBurnsView"
            android:background="#000000"
            android:alpha="0.5"/>
		<ImageView
			android:id="@+id/header_thumbnail"
			android:layout_width="@dimen/header_logo_size"
			android:layout_height="@dimen/header_logo_size"
			android:src="@drawable/icon1"
			android:layout_gravity="center"
			/>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            >
            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"

                android:alpha="0"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/icon"
                    android:layout_marginLeft="12dp"
                    android:layout_width="44dp"
                    android:visibility="gone"
                    android:src="@drawable/icon1"
                    android:layout_height="44dp" />
                <TextView
                    android:id="@+id/title"
                    android:text="Baking Bad"
                    android:textColor="#FFE07A"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="15dp"
                    android:gravity="center"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <com.ogaclejapan.smarttablayout.SmartTabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clipToPadding="false"
                android:paddingLeft="4dp"
                android:background="#fff"
                android:paddingRight="4dp"
                app:stl_defaultTabTextColor="#ffffff"
                app:stl_defaultTabTextHorizontalPadding="18dp"
                app:stl_dividerColor="#fff"
                app:stl_dividerThickness="0dp"
                app:stl_customTabTextLayoutId="@layout/custom_tab"
                app:stl_indicatorColor="#F88920"
                app:stl_indicatorCornerRadius="18dp"
                app:stl_indicatorInterpolation="smart"
                app:stl_indicatorGravity="center"
                app:stl_indicatorThickness="36dp"
                app:stl_underlineColor="#f26522"
                app:stl_underlineThickness="0dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c4c4c4"/>

        </LinearLayout>

	</FrameLayout>

</FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/orders_layout"
        android:visibility="gone"
        android:orientation="horizontal">
        <RelativeLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#252525">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:id="@+id/cart">

                <co.jlabs.ordering.photoview.MaterialFontIcons
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:typeface="serif"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/basket" />
                <TextView
                    android:gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textColor="#fff"
                    android:text="0"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"

                    android:layout_marginTop="5dp"

                    android:id="@+id/orders"
                    android:layout_gravity="right"
                    android:background="@drawable/quantity"/>
            </FrameLayout>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#F5F5F5"
                android:paddingLeft="10dp"
                android:layout_margin="10dp"
                android:id="@+id/slab"
                android:layout_toRightOf="@+id/cart"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/CurrencySign"
                android:layout_toRightOf="@+id/slab"
                android:textColor="#F5F5F5"
                android:id="@+id/currency"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_toRightOf="@+id/currency"
                android:textColor="#F5F5F5"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textSize="17sp"
                android:id="@+id/money_foot"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="CHECK OUT >>"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_alignParentRight="true"
                android:textColor="#F5F5F5"
                android:id="@+id/checkout"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:background="#111111"
                />

        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>


    <co.jlabs.ordering.fab.FloatingActionMenu
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/menu_down"
        android:layout_gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:elevation="6dp"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_fab_size="mini"
        fab:menu_labels_position="right"
        fab:menu_openDirection="down">
        <co.jlabs.ordering.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_local_pizza_white_24dp"
            fab:fab_size="mini"
            android:id="@+id/aboutus"
            fab:fab_label="About us" />
        <co.jlabs.ordering.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_feedback_white_24dp"
            fab:fab_size="mini"
            android:visibility="gone"
            android:id="@+id/feedback"
            fab:fab_label="Feedback" />
        <co.jlabs.ordering.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_thumb_up_white_24dp"
            fab:fab_size="mini"
            android:id="@+id/rate"
            fab:fab_label="Rate us on Play Store" />
        <co.jlabs.ordering.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_white_24dp"
            fab:fab_size="mini"
            android:id="@+id/addresses"
            fab:fab_label="My Addresses" />
        <co.jlabs.ordering.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_history_white_24dp"
            fab:fab_size="mini"
            android:visibility="gone"
            android:id="@+id/history"
            fab:fab_label="Order History" />
        <co.jlabs.ordering.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_assignment_white_24dp"
            fab:fab_size="mini"
            android:visibility="gone"
            android:id="@+id/current"
            fab:fab_label="Current Orders" />
    </co.jlabs.ordering.fab.FloatingActionMenu>
</FrameLayout>